<reactiveui:ReactiveWindow x:Class="RxuiMvpApp.MainWindow"
        x:TypeArguments="local:MainViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RxuiMvpApp"
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        xmlns:reactiveui="http://reactiveui.net" 
        mc:Ignorable="d" FontSize="36"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <local:MapViewModel x:Key="MapViewModel" />
    </Window.Resources>
    
    <Grid>
        <StackPanel>
            <Button x:Name="ZoomInButton" Content="Zoom In" />
            <Button x:Name="ZoomOutButton" Content="Zoom Out" />
            <TextBlock x:Name="SliderValue" Background="LightGoldenrodYellow" />
            <TextBlock x:Name="Label1"  />
            <Slider x:Name="SliderInput1" Minimum="1" Maximum="100" />
            <esri:MapView x:Name="MainMapView" Height="250"
                      Map="{Binding Map, Source={StaticResource MapViewModel}}" />

        </StackPanel>
    </Grid>
</reactiveui:ReactiveWindow>